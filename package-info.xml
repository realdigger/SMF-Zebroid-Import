<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info">

    <id>digger:zebrum_import</id>
    <name>Zebrum import</name>
    <type>modification</type>
    <version>1.0</version>
    <homepage>http://mysmf.ru</homepage>

    <install for="2.0 - 2.0.99">
        <require-dir name="languages" destination="$themedir"/>
        <require-file name="Sources/Mod-ZebrumImport.php" destination="$sourcedir"/>
        <code>hooks.php</code>
        <redirect url="?action=admin;area=modsettings;sa=zebrum_import"/>
    </install>

    <uninstall for="2.0 - 2.0.99">
        <remove-dir name="$themedir/languages/ZebrumImport"/>
        <remove-file name="$sourcedir/Mod-ZebrumImport.php"/>
        <code>hooks.php</code>
    </uninstall>

</package-info>